#!/bin/bash -e

BIN_DIR=/var/vcap/packages/gemfireserver/gemfire-service-broker
RUN_DIR=/var/vcap/sys/run/gemfireserver
LOG_DIR=/var/vcap/sys/log/gemfireserver
JOB_DIR=JOB_DIR=/var/vcap/jobs/gemfireserver
PIDFILE=$RUN_DIR/gemfireserver.pid
STDOUTLOG=$LOG_DIR/gemfireserver.stdout.log
STDERRLOG=$LOG_DIR/gemfireserver.stderr.log
CACHESERVERNAME=gemfire-<%= spec.index %>

export JAVA_HOME=/var/vcap/packages/gemfire_jvm7
export PATH=$PATH:$JAVA_HOME/bin:$BIN_DIR

PORT=<%= properties.gemfire_server.server_port %>
HEAP=<%= properties.gemfire_server.memory.to_s + "m" %>

<% lic_str = "" %>
<% if properties.gemfire_server.license != nil %>
<%   lic_str = properties.gemfire_server.license.to_s %>
<% end %>
LICENSE="<%= lic_str %>"
IPS="<%= properties.gemfire_server.locator_ips %>"
<% ip_str = "" %>
<% properties.gemfire_server.locator_ips.each_with_index do | ip, index | %>
<%   ip_port = ip + "[" + properties.gemfire_server.locator_port.to_s + "]" %>
<%   if index > 0 %>
<%     ip_str = ip_str + "," %>
<%   end %>
<%   ip_str = ip_str + ip_port %>
<% end %>
LOCATOR_STR=<%=  ip_str %>

echo "Server port: $PORT"
echo "Server heap: $HEAP"
echo "Server License: $LICENSE"
echo "Locator IPS: $IPS"  
echo "Full locator string: $LOCATOR_STR" 

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "gemfire"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    cd $BIN_DIR

	java -Xms$HEAP -Xmx$HEAP -Dgemfire-license-data-management=$LICENSE -Dlocators=$LOCATOR_STR -Dtcp-port=$PORT -Dgemfire-name=$CACHESERVERNAME -Dspring.profiles.active=gemfire-server -Djava.net.preferIPv4Stack=true -cp cf-brokers-0.0.1-SNAPSHOT.jar com.pivotal.cloudfoundry.service.broker.gemfire.GemfireServer > $STDOUTLOG &
	sleep 10
	ps aux | grep GemfireServer | grep -v grep | awk '{print $2}' > $PIDFILE
    while read line           
	do           
    	echo "Gemfire PID: $line"     
	done <$PIDFILE 
    
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: gemfireserver_ctl {start|stop}"

    ;;

esac
